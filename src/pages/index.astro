---
import Base from '../layouts/Base.astro';
import PrNotice from '../components/PrNotice.astro';
import OutLink from '../components/OutLink.astro';
import items from '../data/batteries.json';

const title = '楽天で今人気のモバイルバッテリーTOP5（自動取得）';
const description = '楽天APIで取得した上位商品を一覧表示。価格とショップ名をサッと確認。';
---
<Base {title} {description}>
  <h1>{title}</h1>
  <p>{description}</p>

  <table border="1" cellpadding="8" style="border-collapse:collapse;width:100%;margin-top:20px;">
    <thead>
      <tr><th>商品名</th><th>価格</th><th>ショップ</th><th>画像</th></tr>
    </thead>
    <tbody>
      {items.map(i => (
        <tr>
          <td><OutLink href={i.url}>{i.name}</OutLink></td>
          <td>¥{Number(i.price).toLocaleString()}</td>
          <td>{i.shop}</td>
          <td>{i.image && <img src={i.image} alt={i.name} width="100" />}</td>
        </tr>
      ))}
    </tbody>
  </table>

  <p style="margin-top:16px">
    ▶ <a href="/my-gadget-site/earphones">ワイヤレスイヤホンTOP5はこちら</a>
  </p>

  <PrNotice />
</Base>
