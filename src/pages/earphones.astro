---
import Base from '../layouts/Base.astro';
import PrNotice from '../components/PrNotice.astro';

const title = '2025年版：ワイヤレスイヤホンおすすめ5選（仮）';
const description = '価格・連続再生時間・コーデック対応で “ちょうどいい” イヤホンを比較。';

const items = [
  { name: 'SoundPEATS A', price: 3980, play: 7, codec: 'AAC', note: '安価で十分' },
  { name: 'Anker B', price: 7990, play: 9, codec: 'AAC', note: '通勤向け' },
  { name: 'Sony C', price: 13800, play: 8, codec: 'LDAC', note: '高音質' },
  { name: 'JBL D', price: 9980, play: 10, codec: 'AAC', note: '低音強め' },
  { name: 'Apple E', price: 19800, play: 6, codec: 'AAC', note: 'iPhone最適' },
];
---

<Base {title} {description}>
  <h1>{title}</h1>
  <p>{description}</p>

  <table border="1" cellpadding="8" style="border-collapse: collapse; width:100%; margin-top:20px;">
    <thead>
      <tr>
        <th>商品名</th><th>価格</th><th>連続再生</th><th>コーデック</th><th>特徴</th>
      </tr>
    </thead>
    <tbody>
      {items.map(i => (
        <tr>
          <td>{i.name}</td>
          <td>¥{i.price.toLocaleString()}</td>
          <td>{i.play}時間</td>
          <td>{i.codec}</td>
          <td>{i.note}</td>
        </tr>
      ))}
    </tbody>
  </table>

  <p style="margin-top:16px">
    ← <a href="/my-gadget-site/">トップへ戻る</a>
  </p>

  <PrNotice />
</Base>
